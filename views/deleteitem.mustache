
<!--Code for Delete Item form recording DishName and the menu associated-->
<html lang="en">
<head>{{>header2}}</head>
<body>
    <div class="container">
        <h1><mark class="black">{{subtitle}}</mark></h1>
        </p>
        <form method="post" role="form" action="">
            <div class="form-group">
                <label for="menu"><mark class ="black">{{q1}}</mark></label>
                <select name="menu" id="menu" required>
                    <option value="LunchMenu">{{op1}}</option>
                    <option value="DinnerMenu">{{op2}}</option>
                    <option value="ChefSpecial">{{op3}}</option>
                    </div>
                    
            <div class="form-group">
            <label for="DishName"><mark class ="black">{{q2}}</mark></label>
            <textarea class="form-control" id="DishName" name="DishName" placeholder="Enter Dish Name." rows="1" required></textarea>
            </div>
            </p>
             <div class="form-group">
             <input type="submit" value="Remove Menu Item" class="btn btn-primary" style="position:absolute, right: 0px, bottom:3px">
             </div>
        </form>
</body>
</html>